{
  "name": "buyable",
  "version": "1.0.0",
  "description": "Buy and sell goods in your favorite societies",
  "repository": "git@github.com:flxwu/buyable.git",
  "author": "Felix Wu <mail@flxwu.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn run serve",
    "build": "yarn run build-ts && yarn run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "export-certs": "export NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\"",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "devDependencies": {
    "@types/connect-mongo": "^0.0.39",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/mongoose": "^5.3.4",
    "@types/morgan": "^1.7.35",
    "@types/passport": "^0.4.7",
    "@types/passport-local": "^1.0.33",
    "@types/shortid": "^0.0.29",
    "@types/validator": "^10.9.0",
    "@types/yup": "^0.26.4",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/deep-diff": "^1.0.0",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.2",
    "connect-mongo": "^2.0.3",
    "deep-diff": "^1.0.2",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "express-jwt-permissions": "^1.2.3",
    "express-session": "^1.15.6",
    "https": "^1.0.0",
    "jest": "^23.6.0",
    "jsonwebtoken": "^8.4.0",
    "mongodb": "^3.1.10",
    "mongoose": "^5.3.15",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "shortid": "^2.2.14",
    "validator": "^10.10.0",
    "yup": "^0.26.6"
  }
}
